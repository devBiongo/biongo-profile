generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("APP_DATABASE_URL")
}

model User {
  id    Int     @id @default(autoincrement())
  email String  @unique
  name  String?
  posts Post[]
}

model Post {
  id        Int     @id @default(autoincrement())
  title     String
  content   String?
  published Boolean @default(false)
  author    User    @relation(fields: [authorId], references: [id])
  authorId  Int
}

model Log {
  id      Int      @id @default(autoincrement())
  content String
  host    String
  referer String
  time    DateTime @default(now())
}

model AccessLog {
  id        Int      @id @default(autoincrement())
  ip        String
  hostname  String
  country   String
  region    String
  city      String
  postal    String
  timezone  String
  org       String
  timestamp DateTime @default(now())
}
